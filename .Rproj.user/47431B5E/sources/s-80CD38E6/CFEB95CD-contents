f <- function(a) {
  2 * a
}

x <- c(1, 2, 3)
cat(tracemem(x), "\n")
#> <0xa249438>

z <- f(x)
# there's no copy here!

untracemem(x)

###

f <- function(a) {
  x <<- 2 * a
}

x <- c(1, 2, 3)
cat(tracemem(x), "\n")
#> <0xa249438>

z <- f(x)
# there's no copy here!

untracemem(x)


x <- 1
tracemem(x)
y <- 2 * x
untracemem(x)
